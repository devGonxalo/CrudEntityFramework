@model IEnumerable<CrudEntityFramework.Models.Usuario> 
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 class="text-center">CRUD Usuario</h1>
<div class="row">
    <div class="col-12">
        <div class="float-right">
            <a asp-action="Create" asp-controller="Home" class="btn btn-success"><i class="fas fa-plus"></i> Nuevo Usuario</a>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-12">
        <div class="card border">
            <div class="card-header">
                <h3><strong>Lista de usuarios</strong></h3>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                @if (Model.Count() > 0)
                {
                    <table class="table table-bordered" id="tablaUsuarios" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>@Html-DisplayNameFor(m => m.Nombre)</th>
                                <th>@Html-DisplayNameFor(m => m.Telefono)</th>
                                <th>@Html-DisplayNameFor(m => m.Celular)</th>
                                <th>@Html-DisplayNameFor(m => m.Email)</th>
                                <th>Acciones</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                            <tr>
                                <th>@Html.DisplayFor(m => item.Nombre)</th>
                                <th>@Html.DisplayFor(m => item.Telefono)</th>
                                <th>@Html.DisplayFor(m => item.Celular)</th>
                                <th>@Html.DisplayFor(m => item.Email)</th>
                                <td>
                                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@item.Id">Editar</a>
                                    <a class="btn btn-info" asp-action="Details" asp-route-id="@item.Id">Detalle</a>
                                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Borrar</a>
                                </td>
                            </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <p>No hay registros</p>
                }
            </div>
        </div>
    </div>
</div>
@section Scripts{ 
    <script>
        $(document).ready(function () {
            //Llamar a datatable
            $('#tablaUsuarios').DataTable({
                languge: {
                    "decimal": "",
                    "emptyTable": "No hay información",
                    "info": "Mostrando -START_ a _END_ de _TOTAL_ Entradas",
                    "infoEmpty": "Mostrando 0 to 0 of 0 Entradas",
                    "infoPostFix": "",
                    "thousands": "",
                    "lengthMenu": "Mostrar _MENU_ Entradas",
                    "loadingRecords": "Cargando...",
                    "processing": "Procesando...",
                    "search": "Buscar:",
                    "zeroRecords": "Sin resultados encontrados",
                    "paginate": {
                        "first": "Primero",
                        "last": "Ultimo",
                        "next": "Siguiente",
                        "previous": "Anterior"
                    }
                }
            });

        });

    </script>
}